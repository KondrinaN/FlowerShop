    <bean name="OrderBusinessService" class="com.accenture.flowershop.be.business.OrderBusinessServicelmpl">

    </bean>

    <bean class="com.accenture.flowershop.be.business.FlowerBusinessServicelmpl" />

    <bean name="flowerDAO" class="com.accenture.flowershop.be.access.FlowerDAO" />

    <bean name="FlowerBusinessService" class="com.accenture.flowershop.be.business.FlowerBusinessServicelmpl">
